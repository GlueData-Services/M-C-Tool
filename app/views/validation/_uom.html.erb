<div class="bg-white border-start border-end border-bottom border-1 p-3 mb-3 tab-pane fade show" id="uom" role="tabpanel">
  <% Uom.new(match.id).sections.each do |match_type, records| %>
    <h5><%= match_type %></h5>
    <% num, dem = match_type.split(' / ') %>
    <% keys = records.first.keys %>

    <table class="table table-sm table-responsive">
      <thead>
      <tr>
        <% keys.each do |heading| %>
          <th><%= t(heading) %></th>
        <% end %>
      </tr>
      </thead>

      <tbody>
      <% records.each do |record| %>
        <tr>
          <% keys.each do |key| %>
            <td><%= record[key] %></td>
          <% end %>
          <td><%= radio_button_tag "uom[#{num}/#{dem}]", record['matnr'] %></td>
        </tr>
      <% end %>
      </tbody>

      </table>
  <% end %>
</div>