<div id="classification" class="bg-white border-start border-end border-bottom border-1 p-3 mb-3 tab-pane fade show" role="tabpanel">
  <table class="table table-sm table-responsive table-consolidate">
    <thead>
    <tr>
      <th>Article</th>
      <th>MATNR</th>
      <th>ATNAM</th>
      <th>ATWRT</th>
      <th></th>
      <th colspan="2" class="text-center">Consolidated</th>
    </tr>
    </thead>
    <tbody>
    <% ClassificationService.new(match.id).classifications.each_with_index do |cls, i| %>
      <tr class="<%= banner(cls['article'][0]).downcase %>" data-controller="class">
        <td><%= cls['article'] %></td>
        <td><%= cls['MATNR'] %></td>
        <td><%= cls['ATNAM'] %></td>
        <td><%= cls['ATWRT'] %></td>
        <td><%= check_box_tag 'classification_selection', 1, false,
                              data: { action: "class#selectRecord",
                                      'class-atnam-param': cls['ATNAM'],
                                      'class-atwrt-param': cls['ATWRT'] } %>
        </td>
        <td><%= text_field_tag "classification[][atnam]", nil, data: { class_target: 'atnam' } %></td>
        <td><%= text_field_tag "classification[][atwrt]", nil, data: { class_target: 'atwrt' }  %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>