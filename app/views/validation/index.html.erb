<section class="header container-fluid mt-4">
  <h2>Consolidation</h2>
</section>

<section class="container-fluid">
  <ul class="nav nav-tabs" id="nav-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-bs-toggle="tab" data-bs-target="#incomplete">Incomplete</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" data-bs-target="#complete">Complete</a>
    </li>
  </ul>

  <div id="nav-tab-content" class="tab-content border-1 border bg-white">

    <div id="incomplete" class="tab-pane fade show active p-3" role="tabpanel">
      <table class="table table-sm mt-4">
        <thead>
        <tr>
          <th>Match ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Articles</th>
          <th>Fields Complete</th>
          <th>Status</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @matches.each do |match| %>
          <tr>
            <td><%= match.id %></td>
            <td><%= match.name %></td>
            <td><%= match.article_type %></td>
            <td><%= match.matched_articles.count %></td>
            <td><%= match.match_fields.count %></td>
            <td><%= match.status %></td>
            <td class="text-end"><%= link_to 'Consolidate', consolidate_match_path(match), class: 'btn btn-sm btn-outline-glue' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @matches %>
    </div>


    <div id="complete" class="tab-pane fade p-3 border-1 border bg-white" role="tabpanel">
      <table class="table table-sm table-bordered mt-4">
        <thead>
        <tr>
          <th>Match ID</th>
          <th>Name</th>
          <th>Category</th>
          <th>Articles</th>
          <th>Fields Complete</th>
          <th>Status</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% [].each do |match| %>
          <tr>
            <td><%= match.id %></td>
            <td><%= match.name %></td>
            <td><%= match.article_type %></td>
            <td><%= match.matched_articles.count %></td>
            <td><%= match.match_fields.count %></td>
            <td><%= match.status %></td>
            <td><%= link_to 'Consolidate', consolidate_match_path(match) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @matches %>
    </div>
  </div>

</section>
